<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs213.porject5_pizzaorderandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pizzaicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pizzaicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Porject5_PizzaOrderAndroid">

        <activity
            android:name=".PizzaActivity"
            android:exported="true"
            android:label="@string/pizza_activity_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OrderListActivity"
            android:exported="true"
            android:label="@string/order_list_activity_name"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".CurrentOrderActivity"
            android:exported="true"
            android:label="@string/current_order_activity_name"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>